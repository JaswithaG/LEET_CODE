import java.util.*;

class Solution {
    public boolean isValid(String s) {
        Stack<Character> stack = new Stack<>();

        for (char c : s.toCharArray()) {

            // Push all opening brackets
            if (c == '(' || c == '{' || c == '[') {
                stack.push(c);
            }
            else {
                // If closing bracket appears but stack is empty â†’ invalid
                if (stack.isEmpty()) return false;

                char top = stack.pop();

                // Check if closing matches the last opening
                if ((c == ')' && top != '(') ||
                    (c == '}' && top != '{') ||
                    (c == ']' && top != '[')) {
                    return false;
                }
            }
        }

        // Valid only if stack is empty at the end
        return stack.isEmpty();
    }
}
