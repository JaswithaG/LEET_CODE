class Solution {
    public long maxSubarraySum(int[] nums, int k) {
          int n = nums.length;

        long[] minPrefix = new long[k];
        for (int i = 0; i < k; i++) minPrefix[i] = Long.MAX_VALUE;

        long prefix = 0;
        long ans = Long.MIN_VALUE;

        // prefix before index 0 is 0 at mod=0
        minPrefix[0] = 0;

        for (int i = 1; i <= n; i++) {
            prefix += nums[i - 1];

            int mod = i % k;

            if (minPrefix[mod] != Long.MAX_VALUE) {
                ans = Math.max(ans, prefix - minPrefix[mod]);
            }

            // store the minimum prefix sum for current mod
            minPrefix[mod] = Math.min(minPrefix[mod], prefix);
        }

        return ans;
    }
}
